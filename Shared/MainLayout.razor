@inherits LayoutComponentBase
@inject Microsoft.Extensions.Localization.IStringLocalizer<MainLayout> L
<RadzenDialog />
<RadzenNotification />
<RadzenTooltip />
<RadzenContextMenu />

<RadzenLayout style="grid-template-areas: 'rz-sidebar rz-header' 'rz-sidebar rz-body';">

    <Header />

    <RadzenBody Expanded="@sidebarExpanded">
        <RadzenRow class="rz-mx-auto rz-px-4 rz-pt-2 rz-pt-md-4 rz-pt-lg-6 rz-pt-xl-12 rz-pb-2 rz-pb-lg-12" Style="max-width: 1440px;">
            <RadzenColumn Size="12">
                @Body
            </RadzenColumn>
        </RadzenRow>
    </RadzenBody>
    <RadzenSidebar Expanded="@sidebarExpanded" style="z-index: 2">
        <RadzenStack AlignItems="Radzen.AlignItems.Center" class="rz-py-4 rz-py-lg-6" Style="padding: var(--rz-panel-menu-item-padding); border-bottom: var(--rz-panel-menu-item-border);">
            <RadzenImage Path="images/logo.png" style="width: 48px; height: 48px;"></RadzenImage>
            <RadzenText Text="KorJoo" TextStyle="Radzen.Blazor.TextStyle.Subtitle1" class="rz-mb-0" style="color: var(--rz-primary-light);" />
        </RadzenStack>
        <RadzenPanelMenu>
            <RadzenPanelMenuItem Text="Саҳифаи аввал" Path="" />
            <AuthorizeView Roles="company, hragency">
                <Authorized>
                    <RadzenPanelMenu>
                        <RadzenPanelMenuItem Text="Иловаи ҷои корӣ" Path="/company-jobs/add" />
                        <RadzenPanelMenuItem Text="Рӯйхати ҷойҳои корӣ" Path="/company-jobs/list" />
                    </RadzenPanelMenu>
                </Authorized>
            </AuthorizeView>
            <AuthorizeView Roles="applicant">
                <Authorized>
                    <RadzenPanelMenuItem Text="Анкетаи ман" Path="/edit-applicant/" />
                </Authorized>
            </AuthorizeView>
            <AuthorizeView Roles="admin">
                <Authorized>
                    <RadzenPanelMenuItem Text="Applicants" Path="applicants" />
                    <RadzenPanelMenuItem Text="Citiies" Path="citiies" />
                    <RadzenPanelMenuItem Text="Companies" Path="companies" />
                    <RadzenPanelMenuItem Text="JobLanguages" Path="job-languages" />
                    <RadzenPanelMenuItem Text="JobSkills" Path="job-skills" />
                    <RadzenPanelMenuItem Text="Jobs" Path="jobs" />
                    <RadzenPanelMenuItem Text="Skills" Path="skills" />
                    <RadzenPanelMenuItem Text="SpecCategories" Path="spec-categories" />
                    <RadzenPanelMenuItem Text="Specializations" Path="specializations" />
                </Authorized>
            </AuthorizeView>
        </RadzenPanelMenu>
        <RadzenStack AlignItems="Radzen.AlignItems.Center" Gap="0" class="rz-py-4 rz-py-lg-6" Style="padding: var(--rz-panel-menu-item-padding);">
            <RadzenText Text="KorJoo v1.0.0" TextStyle="Radzen.Blazor.TextStyle.Caption" style="color: var(--rz-text-disabled-color);" TagName="Radzen.Blazor.TagName.P" TextAlign="Radzen.TextAlign.Center" />
            <RadzenText Text="Copyright Ⓒ 2023" TextStyle="Radzen.Blazor.TextStyle.Caption" class="rz-mb-0" style="color: var(--rz-text-disabled-color);" TagName="Radzen.Blazor.TagName.P" TextAlign="Radzen.TextAlign.Center" />
        </RadzenStack>
    </RadzenSidebar>
</RadzenLayout>
