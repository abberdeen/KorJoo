@page "/add-applicant-language"
@attribute [Authorize]

@inject Microsoft.Extensions.Localization.IStringLocalizer<AddApplicantLanguage> L
<PageTitle>Add ApplicantLanguage</PageTitle>
    <RadzenColumn SizeMD=12>
        <RadzenAlert Shade="Shade.Lighter" Variant="Variant.Flat" Size="AlertSize.Small" AlertStyle="AlertStyle.Danger" Visible="@errorVisible">Cannot save ApplicantLanguage</RadzenAlert>
        <RadzenTemplateForm TItem="KorJoo.Models.korjoo.ApplicantLanguage" Data="@applicantLanguage" Visible="@(applicantLanguage != null && canEdit)" Submit="@FormSubmit">
          <RadzenStack>
            <RadzenFormField Text="Applicant Id" Variant="Variant.Outlined">
                  <ChildContent>
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@applicantLanguage.ApplicantId" Name="ApplicantId" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="Language" Variant="Variant.Outlined">
                  <ChildContent>
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@applicantLanguage.Language" Name="Language" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="Language Level" Variant="Variant.Outlined">
                  <ChildContent>
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@applicantLanguage.LanguageLevel" Name="LanguageLevel" />
              </ChildContent>
            </RadzenFormField>
          </RadzenStack>
          <RadzenStack style="margin-top:1rem;" Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                    <RadzenButton ButtonStyle="ButtonStyle.Primary" ButtonType="ButtonType.Submit" Icon="save" Text="Save" Variant="Variant.Flat" />
                    <RadzenButton ButtonStyle="ButtonStyle.Light" Text="Cancel" Variant="Variant.Flat" Click="@CancelButtonClick"  />
          </RadzenStack>
        </RadzenTemplateForm>
    </RadzenColumn>

