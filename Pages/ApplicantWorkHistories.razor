@page "/applicant-work-histories"

<PageTitle>ApplicantWorkHistories</PageTitle>
<RadzenStack>
    <RadzenRow AlignItems="AlignItems.Center">
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenText Text="ApplicantWorkHistories" TextStyle="TextStyle.H3" TagName="TagName.H1" style="margin: 0" />
        </RadzenColumn>
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                <RadzenButton Icon="add_circle_outline" Text="Add" Click="@AddButtonClick" Variant="Variant.Flat" />
            </RadzenStack>
        </RadzenColumn>
    </RadzenRow>
    <RadzenRow>
      <RadzenColumn SizeMD=12>
        <RadzenDataGrid @ref="grid0" ColumnWidth="200px"  AllowFiltering="true" FilterMode="FilterMode.Advanced" AllowPaging="true" AllowSorting="true" ShowPagingSummary="true" PageSizeOptions=@(new int[]{5, 10, 20, 30})
            Data="@applicantWorkHistories"    TItem="KorJoo.Models.korjoo.ApplicantWorkHistory" RowSelect="@EditRow" >
            <Columns>
                <RadzenDataGridColumn TItem="KorJoo.Models.korjoo.ApplicantWorkHistory" Property="Id" Title="Id">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="KorJoo.Models.korjoo.ApplicantWorkHistory" Property="CompanyId" Title="Company Id">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="KorJoo.Models.korjoo.ApplicantWorkHistory" Property="CompanyName" Title="Company Name">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="KorJoo.Models.korjoo.ApplicantWorkHistory" Property="Position" Title="Position">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="KorJoo.Models.korjoo.ApplicantWorkHistory" Property="Location" Title="Location">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="KorJoo.Models.korjoo.ApplicantWorkHistory" Property="StartDate" Title="Start Date">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="KorJoo.Models.korjoo.ApplicantWorkHistory" Property="EndDate" Title="End Date">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="KorJoo.Models.korjoo.ApplicantWorkHistory" Property="IsUntilNow" Title="Is Until Now">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="KorJoo.Models.korjoo.ApplicantWorkHistory" Property="Description" Title="Description">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="KorJoo.Models.korjoo.ApplicantWorkHistory" Property="IsVoluntering" Title="Is Voluntering">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="KorJoo.Models.korjoo.ApplicantWorkHistory" Property="Applicant.FirstName" Title="Applicant">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="KorJoo.Models.korjoo.ApplicantWorkHistory" Filterable="false" Sortable="false" Width="70px" TextAlign="TextAlign.Center">
                    <Template Context="applicantWorkHistory">

                        <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="delete" Size="ButtonSize.Medium"
                            Shade="Shade.Lighter" Variant="Variant.Flat"
                            Click=@(args => GridDeleteButtonClick(args, applicantWorkHistory)) @onclick:stopPropagation="true" />
                    </Template>
                </RadzenDataGridColumn>
            </Columns>

        </RadzenDataGrid>

    </RadzenColumn>
  </RadzenRow>
</RadzenStack>
