@page "/job-languages"
@attribute [Authorize]

@inject Microsoft.Extensions.Localization.IStringLocalizer<JobLanguages> L
<PageTitle>JobLanguages</PageTitle>
<RadzenStack>
    <RadzenRow AlignItems="AlignItems.Center">
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenText Text="JobLanguages" TextStyle="TextStyle.H3" TagName="TagName.H1" style="margin: 0" />
        </RadzenColumn>
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                <RadzenButton Icon="add_circle_outline" Text="????? ??????" Click="@AddButtonClick" Variant="Variant.Flat" />
            </RadzenStack>
        </RadzenColumn>
    </RadzenRow>
    <RadzenRow>
      <RadzenColumn SizeMD=12>
        <RadzenDataGrid @ref="grid0" ColumnWidth="200px"  AllowFiltering="true" FilterMode="FilterMode.Advanced" AllowPaging="true" AllowSorting="true" ShowPagingSummary="true" PageSizeOptions=@(new int[]{5, 10, 20, 30})
            Data="@jobLanguages"    TItem="KorJoo.Models.korjoo.JobLanguage" RowSelect="@EditRow" >
            <Columns>
                <RadzenDataGridColumn TItem="KorJoo.Models.korjoo.JobLanguage" Property="Id" Title="Id">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="KorJoo.Models.korjoo.JobLanguage" Property="Language" Title="Language">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="KorJoo.Models.korjoo.JobLanguage" Property="LanguageLevel" Title="Language Level">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="KorJoo.Models.korjoo.JobLanguage" Property="Job.Name" Title="Job">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="KorJoo.Models.korjoo.JobLanguage" Filterable="false" Sortable="false" Width="70px" TextAlign="TextAlign.Center">
                    <Template Context="jobLanguage">

                        <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="delete" Size="ButtonSize.Medium"
                            Shade="Shade.Lighter" Variant="Variant.Flat"
                            Click=@(args => GridDeleteButtonClick(args, jobLanguage)) @onclick:stopPropagation="true" />
                    </Template>
                </RadzenDataGridColumn>
            </Columns>

        </RadzenDataGrid>

    </RadzenColumn>
  </RadzenRow>
</RadzenStack>
