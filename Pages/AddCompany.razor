@page "/add-company"

<PageTitle>Add Company</PageTitle>
    <RadzenColumn SizeMD=12>
        <RadzenAlert Shade="Shade.Lighter" Variant="Variant.Flat" Size="AlertSize.Small" AlertStyle="AlertStyle.Danger" Visible="@errorVisible">Cannot save Company</RadzenAlert>
        <RadzenTemplateForm TItem="KorJoo.Models.korjoo.Company" Data="@company" Visible="@(company != null && canEdit)" Submit="@FormSubmit">
          <RadzenStack>
            <RadzenFormField Text="Name" Variant="Variant.Outlined">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@company.Name" Name="Name" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="Type Id" Variant="Variant.Outlined">
                  <ChildContent>
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@company.TypeId" Name="TypeId" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="Description" Variant="Variant.Outlined">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@company.Description" Name="Description" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="Logo" Variant="Variant.Outlined">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@company.Logo" Name="Logo" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="Instagram" Variant="Variant.Outlined">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@company.Instagram" Name="Instagram" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="Telegram" Variant="Variant.Outlined">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@company.Telegram" Name="Telegram" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="Facebook" Variant="Variant.Outlined">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@company.Facebook" Name="Facebook" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="You Tube" Variant="Variant.Outlined">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@company.YouTube" Name="YouTube" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="Website" Variant="Variant.Outlined">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@company.Website" Name="Website" />
              </ChildContent>
            </RadzenFormField>
          </RadzenStack>
          <RadzenStack style="margin-top:1rem;" Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                    <RadzenButton ButtonStyle="ButtonStyle.Primary" ButtonType="ButtonType.Submit" Icon="save" Text="Save" Variant="Variant.Flat" />
                    <RadzenButton ButtonStyle="ButtonStyle.Light" Text="Cancel" Variant="Variant.Flat" Click="@CancelButtonClick"  />
          </RadzenStack>
        </RadzenTemplateForm>
    </RadzenColumn>

