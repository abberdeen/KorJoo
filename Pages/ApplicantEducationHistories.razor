@page "/applicant-education-histories"
@attribute [Authorize]

@inject Microsoft.Extensions.Localization.IStringLocalizer<ApplicantEducationHistories> L
<PageTitle>ApplicantEducationHistories</PageTitle>
<RadzenStack>
    <RadzenRow AlignItems="AlignItems.Center">
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenText Text="ApplicantEducationHistories" TextStyle="TextStyle.H3" TagName="TagName.H1" style="margin: 0" />
        </RadzenColumn>
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                <RadzenButton Icon="add_circle_outline" Text="Add" Click="@AddButtonClick" Variant="Variant.Flat" />
            </RadzenStack>
        </RadzenColumn>
    </RadzenRow>
    <RadzenRow>
      <RadzenColumn SizeMD=12>
        <RadzenDataGrid @ref="grid0" ColumnWidth="200px"  AllowFiltering="true" FilterMode="FilterMode.Advanced" AllowPaging="true" AllowSorting="true" ShowPagingSummary="true" PageSizeOptions=@(new int[]{5, 10, 20, 30})
            Data="@applicantEducationHistories"    TItem="KorJoo.Models.korjoo.ApplicantEducationHistory" RowSelect="@EditRow" >
            <Columns>
                <RadzenDataGridColumn TItem="KorJoo.Models.korjoo.ApplicantEducationHistory" Property="Id" Title="Id">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="KorJoo.Models.korjoo.ApplicantEducationHistory" Property="TypeId" Title="Type Id">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="KorJoo.Models.korjoo.ApplicantEducationHistory" Property="Name" Title="Name">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="KorJoo.Models.korjoo.ApplicantEducationHistory" Property="Location" Title="Location">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="KorJoo.Models.korjoo.ApplicantEducationHistory" Property="Faculty" Title="Faculty">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="KorJoo.Models.korjoo.ApplicantEducationHistory" Property="StartDate" Title="Start Date">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="KorJoo.Models.korjoo.ApplicantEducationHistory" Property="EndDate" Title="End Date">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="KorJoo.Models.korjoo.ApplicantEducationHistory" Property="IsUntilNow" Title="Is Until Now">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="KorJoo.Models.korjoo.ApplicantEducationHistory" Property="Description" Title="Description">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="KorJoo.Models.korjoo.ApplicantEducationHistory" Property="Level" Title="Level">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="KorJoo.Models.korjoo.ApplicantEducationHistory" Property="Specialization" Title="Specialization">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="KorJoo.Models.korjoo.ApplicantEducationHistory" Property="Applicant.FirstName" Title="Applicant">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="KorJoo.Models.korjoo.ApplicantEducationHistory" Filterable="false" Sortable="false" Width="70px" TextAlign="TextAlign.Center">
                    <Template Context="applicantEducationHistory">

                        <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="delete" Size="ButtonSize.Medium"
                            Shade="Shade.Lighter" Variant="Variant.Flat"
                            Click=@(args => GridDeleteButtonClick(args, applicantEducationHistory)) @onclick:stopPropagation="true" />
                    </Template>
                </RadzenDataGridColumn>
            </Columns>

        </RadzenDataGrid>

    </RadzenColumn>
  </RadzenRow>
</RadzenStack>
