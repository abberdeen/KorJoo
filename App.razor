<CascadingAuthenticationState>
<Router AppAssembly="@typeof(App).Assembly">
    <Found Context="routeData">
        <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
            <NotAuthorized>
                <RedirectToLogin IsAuthenticated="@context.User.Identity.IsAuthenticated" />
            </NotAuthorized>
            <Authorizing></Authorizing>
        </AuthorizeRouteView>
    </Found>
    <NotFound>
        <PageTitle>Ёфт нашуд</PageTitle>    
        <LayoutView Layout="@typeof(MainLayout)">
            <RadzenRow>
                <RadzenColumn Size="12" style="margin-top: 5rem; margin-bottom: 5rem">
                    <RadzenText Text="Саҳифа ёфт нашуд" TextStyle="TextStyle.DisplayH1" style="margin: 0; margin-bottom: 2rem" TextAlign="TextAlign.Center" />
                        <RadzenText Text="Бубахшед, аммо дар ин ҷо ҳеҷ чиз нест!" TextStyle="TextStyle.H6" style="margin: 0" TextAlign="TextAlign.Center" TagName="TagName.P" />
                </RadzenColumn>
            </RadzenRow>
        </LayoutView>
    </NotFound>
</Router>
</CascadingAuthenticationState>
